<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <TableLayout
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:padding="30dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="127dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="127dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="Batterie Spannung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewVoltageText"
                    android:textSize="24sp"/>
            <TextView
                    android:text="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewVoltageValue"
                    android:textSize="24sp"/>
            <TextView
                    android:text="mV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp" tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="16dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="Batterie Strom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewCurrentText"
                    android:textSize="24sp"/>
            <TextView
                    android:text="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewCurrentValue"
                    android:textSize="24sp"/>
            <TextView
                    android:text="mA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp" tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="16dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView15" android:textSize="24sp"/>

        </TableRow>
        <TableRow android:layout_height="wrap_content" android:layout_width="200dp">
            <TextView
                    android:text="Höhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="145dp"
                    tools:layout_editor_absoluteX="149dp" android:id="@+id/textViewHeightText" android:textSize="24sp"/>
            <TextView
                    android:text="0.0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewHeightValue" android:textSize="24sp"/>
            <TextView
                    android:text="m ü. M."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textSize="24sp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="Geschwindigkeit"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content" android:id="@+id/textViewSpeedText" android:textSize="24sp"/>
            <TextView
                    android:text="0.0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewSpeedValue" android:textSize="24sp"/>
            <TextView
                    android:text="km/h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textSize="24sp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="Position:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewPosText" android:textSize="24sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewPosValue" android:textSize="24sp"
                    android:text="46°14′06.70″N"/>
        </TableRow>
        <TableRow android:layout_height="wrap_content" android:layout_width="200dp">
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="8°0′55.60″O"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView14" android:textSize="24sp"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>