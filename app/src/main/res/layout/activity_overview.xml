<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include
            layout="@layout/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/toolbar_main"/>


    <Button
            android:text="@string/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnSettings"/>
    <Button
            android:text="@string/btn_mission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnMission"/>
    <Button
            android:text="@string/btn_command"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnCommand"/>
    <Button
            android:text="@string/btn_live_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnLiveView"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="82dp"/>
    <TextView
            android:text="@string/mavlink_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewMavlink"/>
    <CheckBox
            android:text="Connected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/checkBoxMavState"/>

</LinearLayout>